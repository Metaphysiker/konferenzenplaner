<%= @event.title %><br>
<%= @event.description %><br>
Tags: <%= @event.tag_list %><br>
Termin-Möglichkeiten: <br><br>
<% i = 1 %>
<% @possibilities.each do |poss| %>
    <% if allnotconfirmed?(@event) %>
        <div class ="blue">
          <% elsif poss.confirmed == true %>
        <div class ="green">
          <%= link_to "Rückgängig machen?", confirm_path(poss), :method => :post %><br>
          <% else %>
        <div class ="red">
          <% end %>
    <table>
      <td>
        Möglichkeit <%= poss.number %>:<br>
        <% if allnotconfirmed?(@event) %>
            <%= link_to "Event bestätigen?", confirm_path(poss), :method => :post %><br>
        <% end %>
        <% poss.date_events.each do |date| %>
            <%= date.date %><br>
        <% end %>
      </td>
      <td>
        <% konflikte = konflikt?(@event, poss) %>
        <% konflikte.each do |konflikt| %>
            <%=konflikt %><br>
        <% end %>
      </td>
    </table>
</div><br><br>
<% end %>
<br>
Möglichkeit hinzufügen: <%= link_to "Contribute", event_possibilities_path(@event), :method => :post %>