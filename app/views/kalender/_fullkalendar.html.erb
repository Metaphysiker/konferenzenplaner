<div class="green">
  Grüner Hintergrund bedeutet: Termin findet definitiv an diesem Tag statt!
</div><br>
<div class="blue">
  Blauer Hintergrund bedeutet: Termin findet möglicherweise an diesem Tag statt.
</div>
<br>
<div class="container">
  <div class="dropdown">
    <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
      <% if @tag.nil? %>
          Kategorie auswählen
      <% else %>
          <%= @tag %>
      <% end %>
      <span class="caret"></span></button>
    <ul class="dropdown-menu">
      <li><%= link_to "Logik ", kalender_path(date: @date, search_input: "Logik"), remote:true %></li>
      <li><%= link_to "Metaphysik ", kalender_path(date: @date, search_input: "Metaphysik"), remote:true %></li>
      <li><%= link_to "Ethik ", kalender_path(date: @date, search_input: "Ethik"), remote:true %></li>
      <li><%= link_to "Alle Events ", kalender_path(date: @date, search_input: "Alle Events"), remote:true %></li>
    </ul>
  </div>
</div>
<br>
<div class="userview">
  <%= link_to "Früher ", kalender_path(date: @date - 1.month, search_input: params[:search_input]), remote:true %>
  <%= "#{@date.strftime("%B")} #{@date.year}" %>
  <%= link_to " Später ", kalender_path(date: @date + 1.month, search_input: params[:search_input]), remote:true %>
</div>
<br>
<table class="calendar">
  <tr>
    <th>Monday</th>
    <th>Tuesday</th><th>Wednesday</th>
    <th>Thursday</th><th>Friday</th>
    <th>Saturday</th><th>Sunday</th>
  </tr>
  <% @weeks.each do |week| %>
      <tr>
        <% week.each do |date| %>
            <% if date.month != @date.month %>
                <td style="background-color: gray">
                  <%= date.day %>
                  <% @events.each do |event| %>
                      <% event.possibilities.each do |poss| %>
                          <% poss.date_events.each do |datex| %>
                              <% if datex.date == date %>
                                  <% if poss.confirmed == true %>
                                      <div class="green"%>
                                        <%= event.title %></div>
                                      <% elsif allnotconfirmed?(event) %>
                                      <div class="blue"%>
                                        <%= event.title %></div>
                                      <% else%>

                                  <% end %>
                                  <br>
                              <% end %>
                          <% end %>
                      <% end %>
                  <% end %>
                </td>
            <% else %>
                <td>
                  <%= date.day %>
                  <% @events.each do |event| %>
                      <% event.possibilities.each do |poss| %>
                          <% poss.date_events.each do |datex| %>
                              <% if datex.date == date %>
                                  <br><div class="trigger">
                                  <% if poss.confirmed == true %>
                                      <div class="green"%>
                                        <%= event.title %>
                                      </div>
                                          <div class="pop-up">
                                            <h3><%= event.title %></h3>
                                            <%= event.description %><br>
                                            <% konflikte = konflikt?(event, poss) %>
                                            <% konflikte.each do |konflikt| %>
                                                <%=konflikt %><br>
                                            <% end %>
                                          </div>
                                          </div>
                                    <% elsif allnotconfirmed?(event) %>
                                      <div class="blue"%>
                                        <%= event.title %></div>
                                          <div class="pop-up">
                                            <h3><%= event.title %></h3>
                                            <%= event.description %><br>
                                            <% konflikte = konflikt?(event, poss) %>
                                            <% konflikte.each do |konflikt| %>
                                                <%=konflikt %><br>
                                            <% end %>
                                          </div>
                                          </div>
                                  <% else%>

                                  <% end %>
                                  <br>
                              <% end %>
                          <% end %>
                      <% end %>
                  <% end %>
                </td>
            <% end %>
        <% end %>
      </tr>
  <% end %>
</table>



<script>
  $(document).ready(function(){
    $("div").click(function(){

      if($(this).position().left > 55) {
        $(this).animate({left: '0px'});
      }
      else {
        $(this).animate({left: '250px'});
      }
    });

    $( ".clickme" ).click(function() {
      $(this).children(".book").toggle( "slow", function() {
        // Animation complete.$( "div" ).children( ".selected" ).css( "color", "blue" );
      });
    });




    $(function() {
      var moveLeft = -140;
      var moveDown = 10;

      $('.trigger').hover(function(e) {
        $(this).children("div.pop-up").show();
        //.css('top', e.pageY + moveDown)
        //.css('left', e.pageX + moveLeft)
        //.appendTo('body');
      }, function() {
        $('div.pop-up').hide();
      });

      $('.trigger').mousemove(function(e) {
        $(this).children("div.pop-up").css('top', e.pageY + moveDown).css('left', e.pageX + moveLeft);
      });

    });


  });
</script>